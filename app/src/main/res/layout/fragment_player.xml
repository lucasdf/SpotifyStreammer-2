<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_player">

    <TextView
        android:id="@+id/player_artistname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bob Dylan"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/player_albumname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blonde on Blonde"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/player_albumimage_imageview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:src="@android:drawable/alert_dark_frame"/>

    <TextView
        android:id="@+id/player_musicname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absolutely Sweet Marie"
        android:layout_gravity="center_horizontal" />

    <SeekBar
        android:id="@+id/player_seekbar_seekbarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false">
    </SeekBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/player_previous_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/player_playpause_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_pause"
            android:layout_weight="1"
            android:onClick="playPause"/>
        <ImageButton
            android:id="@+id/player_next_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>